/* components/search-header/search-header.wxss */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
}

.city {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 6rpx;
}

.search-box {
  flex: 1;
  background-color: #f2f2f2;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #999;
}

.search-placeholder {
  color: #999;
  font-size: 26rpx;
}

.avatar {
  font-size: 36rpx;
  margin-left: 20rpx;
}
