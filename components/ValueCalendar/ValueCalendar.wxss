/* components/ValueCalendar/ValueCalendar.wxss */
.vc-container {
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.vc-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.vc-title {
  font-size: 18px;
  font-weight: bold;
}

.vc-nav {
  width: 32px;
  height: 32px;
  font-size: 18px;
  line-height: 32px;
  text-align: center;
  background: none;
  border: none;
}

.vc-weekdays {
  display: flex;
  margin-bottom: 4px;
}

.vc-weekday {
  flex: 1;
  text-align: center;
  font-size: 14px;
}

.vc-grid {
  display: flex;
  flex-direction: column;
}

.vc-row {
  display: flex;
}

.vc-cell {
  flex: 1;
  height: 40px;
  margin: 2px;
  border: 1px solid #ddd;
  border-radius: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.vc-cell text {
  font-size: 14px;
}

.vc-empty {
  border: none !important;
  background: transparent !important;
  /* 如果想完全不占位，也可以：visibility: hidden; */
}

