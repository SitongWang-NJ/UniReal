/* components/delivery-insight/delivery-insight.wxss */
.insight-card {
  background-color: #fff;
  padding: 24rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.insight-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.insight-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 26rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
  font-weight: 500;
}
