/* components/content-card/content-card.wxss */
.content-card {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  overflow: hidden;
  margin-bottom: 30rpx;
}

.card-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.card-content {
  padding: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.card-extra {
  font-size: 24rpx;
  color: #999;
}
