/* pages/restaurant_detail/restaurant_detail.wxss */
.restaurant-detail {
  background-color: #f9f9f9;
}

.top-actions {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 99;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.icon-btn {
  font-size: 36rpx;
  padding: 10rpx;
}

.image-swiper {
  width: 100%;
  height: 300rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.info-section {
  background: #fff;
  padding: 30rpx 20rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
}

.subtitle {
  color: #666;
  margin-top: 10rpx;
}

.subscores text {
  margin-right: 20rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #888;
}

.tags {
  color: #888;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.highlight {
  color: #fa6400;
  margin-top: 10rpx;
}

.tips-section {
  background: #fffbe6;
  color: #8a6d3b;
  padding: 20rpx;
  font-size: 26rpx;
  margin: 20rpx;
  border-radius: 12rpx;
}

.nav-buttons {
  margin-top: 10rpx;
  display: flex;
  gap: 20rpx;
}
