/* pages/order_detail/order_detail.wxss */

.container {
  padding: 0;
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式 */
.header {
  position: relative;
  height: 120rpx;
  padding-top: 40rpx; /* 为状态栏预留空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 返回选项样式 */
.return-container {
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.return-option {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.return-option:active, .button-hover {
  transform: scale(0.98);
  background-color: #f0f0f0;
}

.return-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 30rpx;
}

.icon-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #007aff;
  line-height: 1;
}

.return-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #007aff;
}

.return-arrow {
  color: #cccccc;
  font-size: 32rpx;
}

/* 订单状态卡片 */
.order-info-card {
  width: 100%;
  padding: 40rpx 30rpx;
  background-color: #07c160;
  box-sizing: border-box;
  color: #ffffff;
  margin-top: 0;
}

.order-status {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
}

.order-id, .order-time {
  font-size: 26rpx;
  opacity: 0.9;
  margin-top: 10rpx;
}

/* 通用卡片样式 */
.section-card {
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

/* 信息项样式 */
.info-item {
  display: flex;
  margin-bottom: 15rpx;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999999;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 地址信息样式 */
.address-item {
  display: flex;
  padding: 15rpx 0;
}

.address-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-content {
  flex: 1;
}

.address-title {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #666666;
}

.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 商品列表样式 */
.product-list {
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.product-info {
  display: flex;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #333333;
  margin-right: 15rpx;
}

.product-count {
  font-size: 28rpx;
  color: #999999;
}

.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.amount-label {
  font-size: 28rpx;
  color: #333333;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.order-remark {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.remark-label {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.remark-value {
  font-size: 28rpx;
  color: #333333;
}

/* 媒体部分样式 */
.media-section {
  margin-bottom: 30rpx;
}

.media-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 15rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.delivery-image {
  width: 100%;
  height: 100%;
}

.video-container {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.delivery-video {
  width: 100%;
  height: 100%;
}

/* 时间线样式 */
.timeline {
  position: relative;
  padding-left: 30rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  top: 15rpx;
  left: 10rpx;
  height: calc(100% - 30rpx);
  width: 2rpx;
  background-color: #e0e0e0;
}

.timeline-item {
  position: relative;
  margin-bottom: 30rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  top: 15rpx;
  left: -30rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.timeline-dot.active {
  background-color: #07c160;
}

.timeline-content {
  padding: 5rpx 0;
}

.timeline-time {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 5rpx;
}

.timeline-status {
  font-size: 28rpx;
  color: #333333;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 视频全屏提示 */
.video-container {
  position: relative;
}

.video-fullscreen-hint {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  z-index: 10;
}

.hint-text {
  color: #ffffff;
  font-size: 24rpx;
}

/* 全屏媒体容器 */
.fullscreen-media-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #000000;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

/* 全屏顶部导航 */
.fullscreen-header {
  position: relative;
  height: 120rpx;
  padding-top: 40rpx; /* 为状态栏预留空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

.fullscreen-header .back-btn {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  transition: all 0.3s;
}

.fullscreen-header .back-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 255, 255, 0.3);
}

.fullscreen-header .back-icon {
  font-size: 38rpx;
  font-weight: bold;
  color: #ffffff;
}

.fullscreen-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 全屏轮播图 */
.fullscreen-swiper {
  flex: 1;
  width: 100%;
  height: 100%;
}

.fullscreen-image {
  width: 100%;
  height: 100%;
}

/* 全屏视频 */
.fullscreen-video-container {
  flex: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fullscreen-video {
  width: 100%;
  height: 100%;
}
