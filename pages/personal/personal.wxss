/* pages/personal/personal.wxss */

.personal-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式 */
.header {
  position: relative;
  height: 120rpx;
  padding-top: 40rpx; /* 为状态栏预留空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.back-icon {
  font-size: 38rpx;
  font-weight: bold;
  color: #333333;
}

.back-text {
  position: absolute;
  left: 100rpx;
  font-size: 26rpx;
  color: #666666;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 用户信息区域样式 */
.user-info-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar-container {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 个人信息列表样式 */
.info-list {
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 30rpx;
}

.icon-text {
  font-size: 32rpx;
  line-height: 1;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 28rpx;
  color: #333333;
}

.info-value {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.info-arrow {
  color: #cccccc;
  font-size: 32rpx;
}