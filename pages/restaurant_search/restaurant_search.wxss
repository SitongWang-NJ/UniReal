/* pages/restaurant_search/restaurant_search.wxss */
.page {
  background-color: #f9f9f9;
  padding: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx;
}


.icon-btn {
  font-size: 36rpx;
  color: #333;
  margin-right: 16rpx;
}


.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 18rpx 24rpx;
  background-color: #f2f2f2;
  border-radius: 24rpx;
}


.filter-bar {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
  border-radius: 12rpx;
}

.filter-item {
  font-size: 28rpx;
  color: #333;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin: 30rpx 10rpx 20rpx;
  color: #666;
}

.recommend {
  text-align: center;
  color: #999;
}
