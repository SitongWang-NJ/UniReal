/* pages/work_status_detail/work_status_detail.wxss */
/* 页面整体容器 */
.container {
  padding: 0;
  background-color: #f5f5f5;
}

/* 通用卡片样式（数据概览 / 进度条 / 接单列表） */
.summary-card,
.progress-section,
.order-list {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 概览模块中的每一项 */
.summary-item {
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

/* 进度条标题 */
.progress-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

/* 接单列表标题 */
.order-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 每一条订单项 */
.order-item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

/* 订单主行内容：时间 / 商户 / 金额 */
.order-row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

/* 订单副信息：距离 / 状态 */
.order-sub {
  color: #999999;
  font-size: 24rpx;
  margin-top: 8rpx;
}
