/* pages/settings/settings.wxss */
.container {
  padding: 0;
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏样式 */
.header {
  position: relative;
  height: 120rpx;
  padding-top: 40rpx; /* 为状态栏预留空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 用户信息区域样式 */
.user-info-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar-container {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 设置组容器 */
.settings-container {
  width: 100%;
}

/* 设置组标题 */
.setting-group-title {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #888888;
  background-color: transparent;
}

/* 设置项列表 */
.settings-list {
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

/* 返回按钮特殊样式 */
.settings-list:first-child .setting-item {
  padding: 25rpx 30rpx;
  background-color: #f8f8f8;
}

.settings-list:first-child .setting-name {
  font-weight: 500;
  color: #007aff;
}

.settings-list:first-child .setting-icon {
  background-color: rgba(0, 122, 255, 0.1);
}

.settings-list:first-child .icon-text {
  color: #007aff;
  font-size: 34rpx;
  font-weight: bold;
}

/* 设置图标 */
.setting-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 30rpx;
}

.icon-text {
  font-size: 30rpx;
  line-height: 1;
}

/* 设置名称 */
.setting-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 箭头 */
.setting-arrow {
  color: #cccccc;
  font-size: 32rpx;
}

/* 应用版本信息 */
.app-version {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: auto;
}

.app-version text {
  font-size: 24rpx;
  color: #999999;
  line-height: 36rpx;
}
