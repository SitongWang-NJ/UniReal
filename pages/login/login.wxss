/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 100rpx 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #ffffff;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
}

.login-tips {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  margin: 20rpx 0;
  text-align: center;
  font-size: 30rpx;
}
