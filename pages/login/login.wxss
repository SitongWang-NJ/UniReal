/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 100rpx 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #ffffff;
}
.logo {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 60rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-tips {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: bold;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  margin: 20rpx 0;
  text-align: center;
  font-size: 30rpx;
}
